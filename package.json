{
  "name": "jira-confetti",
  "version": "1.0.1",
  "author": "Jeremiah Fischer <jfischer@fargohope.org>",
  "description": "Desktop app to trigger confetti for Jira events",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "mqtt": "^5.14.1"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.hlc.jira-confetti",
    "productName": "jira-confetti",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
