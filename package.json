{
  "name": "desktop-confetti",
  "version": "1.0.1",
  "author": "Jeremiah Fischer <fischgeek@gmail.com>",
  "description": "Desktop app to trigger confetti effects",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3",
    "mqtt": "^5.14.1"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "asarUnpack": [
      "assets/**"
    ],
    "appId": "com.desktop-confetti",
    "productName": "DesktopConfetti",
    "files": [
      "**/*",
      "assets/**",
      "!**/locales",
      "!**/locales/**"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
