{
  "name": "desktop-confetti",
  "version": "1.0.10",
  "author": "Jeremiah Fischer <fischgeek@gmail.com>",
  "description": "Desktop app to trigger confetti effects",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3",
    "mqtt": "^5.14.1"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "asarUnpack": [
      "assets/**"
    ],
    "appId": "com.desktop-confetti",
    "productName": "DesktopConfetti",
    "icon": "assets/confetti",
    "electronLanguages": [
      "en-US"
    ],
    "files": [
      "**/*",
      "assets/**",
      "!**/locales",
      "!**/locales/**"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "icon": "assets/confetti.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": false,
      "installerIcon": "assets/confetti.ico",
      "uninstallerIcon": "assets/confetti.ico",
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "runAfterFinish": true,
      "include": "installer.nsh"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/confetti.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/confetti.png"
    }
  }
}
